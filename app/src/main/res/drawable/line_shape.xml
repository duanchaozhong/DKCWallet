<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line">
    <!-- 显示一条虚线，破折线的宽度为dashWith，破折线之间的空隙的宽度为dashGap，当dashGap=0dp时，为实线 -->
    <stroke
        android:dashGap="@dimen/common.8dp"
        android:dashWidth="@dimen/common.8dp"
        android:width="@dimen/common.2dp"
        android:color="@color/split_color_dd" />

    <!-- 虚线的高度 -->
    <size android:height="@dimen/common.2dp" />

</shape>