<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/split_color_dd">

    <include
        layout="@layout/bar_split_blue_view"/>

    <include
        layout="@layout/title_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common.40dp"
        android:layout_marginLeft="@dimen/common.40dp"
        android:layout_marginTop="@dimen/common.40dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/common.80dp"
            android:background="@drawable/relative_shape">

            <TextView
                android:id="@+id/amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/common.110dp"
                android:textColor="@color/text_black"
                android:textSize="@dimen/common.80sp"
                android:text=""
                />
                <!--android:text="12000.0000"-->

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/amount_tv"
                android:layout_marginTop="@dimen/common.30dp"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/common.46sp"
                android:textColor="@color/text_black"
                />
                <!--android:text="@string/trade_success"-->

            <TextView
                android:id="@+id/pay_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/status_tv"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/common.40dp"
                android:layout_marginTop="@dimen/common.70dp"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/common.46sp"
                android:text="@string/paying_side"
                />

            <TextView
                android:id="@+id/to_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pay_people"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/common.40dp"
                android:layout_marginTop="@dimen/common.30dp"
                android:textColor="@color/text_black"
                android:textSize="@dimen/common.36sp"
                />
                <!--android:text="589c65ffd8865"-->

            <TextView
                android:id="@+id/in_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/to_address_tv"
                android:layout_marginTop="@dimen/common.50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/common.40dp"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/common.46sp"
                android:text="@string/receving_side"/>

            <TextView
                android:id="@+id/in_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/in_address_name"
                android:layout_marginLeft="@dimen/common.40dp"
                android:layout_marginTop="@dimen/common.30dp"
                android:textColor="@color/text_black"
                android:textSize="@dimen/common.36sp"
                />
                <!--android:text="56wwwddd45555555"-->

            <TextView
                android:id="@+id/fee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/in_address_tv"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/common.90dp"
                android:layout_marginLeft="@dimen/common.40dp"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/common.46sp"
                android:text="@string/fee"/>

            <TextView
                android:id="@+id/fee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/fee_name"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common.40dp"
                android:textSize="@dimen/common.46sp"
                android:textColor="@color/text_black"
                />
                <!--android:text="5.0000DKC"-->

            <View
                android:id="@+id/split_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common.5dp"
                android:layout_marginRight="@dimen/common.40dp"
                android:layout_marginLeft="@dimen/common.40dp"
                android:layout_below="@id/fee_name"
                android:layout_marginTop="@dimen/common.65dp"
                android:layerType="software"
                android:background="@drawable/line_shape"/>

            <ImageView
                android:layout_width="@dimen/common.20dp"
                android:layout_height="@dimen/common.40dp"
                android:layout_below="@id/fee_name"
                android:layout_marginTop="@dimen/common.45dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/left_half_circle"/>

            <ImageView
                android:layout_width="@dimen/common.20dp"
                android:layout_height="@dimen/common.40dp"
                android:layout_below="@id/fee_name"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/common.45dp"
                android:background="@drawable/right_half_circle"/>

            <TextView
                android:id="@+id/transfer_number_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/split_line"
                android:layout_marginTop="@dimen/common.70dp"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/common.46sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/common.40dp"
                android:text="@string/trade_no"/>

            <TextView
                android:id="@+id/trade_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/transfer_number_name"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common.40dp"
                android:textColor="@color/text_black"
                android:textSize="@dimen/common.36sp"
                />
                <!--android:text="5656445454545"-->

            <TextView
                android:id="@+id/transfer_time_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transfer_number_name"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/common.40dp"
                android:layout_marginTop="@dimen/common.60dp"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/common.46sp"
                android:text="@string/trade_time"/>

            <TextView
                android:id="@+id/transfer_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/transfer_time_name"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common.40dp"
                android:textColor="@color/text_black"
                android:textSize="@dimen/common.36sp"
                />
                <!--android:text="2018-10-18 23:46:35"-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common.60dp"
                android:layout_below="@id/transfer_time_name"
                android:background="@color/transparent"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/status_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/check_right"/>

    </RelativeLayout>

</LinearLayout>