<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style type="text/css" name="themeSetting" parent="AppTheme">
        <item name="textAllCaps">false</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="registDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/mp_touming</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Activity动画-->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">  
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
    </style> 

    <!--水平分割线-->
    <style name="split_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common.2dp</item>
        <item name="android:background">@color/split_color</item>
    </style>

    <!--水平分割线dd-->
    <style name="split_horizontal_dd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common.2dp</item>
        <item name="android:background">@color/split_color_dd</item>
    </style>

    <!--垂直分割线-->
    <style name="split_vertical">
        <item name="android:layout_width">@dimen/common.2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/split_color</item>
    </style>

    <!--输入框大小和shape-->
    <style name="edittext_styte">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common.80dp</item>
        <item name="android:background">@drawable/edittext_no_corner</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--tab字体大小设置不能直接在xml中写只能设置style-->
    <style name="tab_size">
        <item name="android:textSize">@dimen/common.40sp</item>
    </style>
    
    <!--Relative正行style-->
    
    <style name="relative_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common.150dp</item>
        <item name="android:background">@drawable/layout_ripple</item>
        <item name="android:layout_marginLeft">@dimen/common.40dp</item>
        <item name="android:layout_marginRight">@dimen/common.40dp</item>
    </style>

    <!--dialog style-->
    <style name="shapeDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <!--dialog animal-->
    <style name="dialogstyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="FilterTitleStyle">
        <item name="android:textSize">@dimen/common.40sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FilterModuleWrapperStyle">
        <item name="android:paddingLeft">@dimen/common.40dp</item>
        <item name="android:paddingRight">@dimen/common.40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SpinnerTvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/down_arrow</item>
        <!--<item name="android:popupBackground">#3fff</item>-->
        <!--<item name="android:overlapAnchor">false</item>-->
        <item name="android:spinnerMode">dropdown</item>
    </style>

</resources>
